<div class="container">
    <div class="header-wrapper">
        <h1>ガソリン給油シミュレーション</h1>
    </div>
    <div class="bike-wrapper">
        <h2>バイクの情報</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-8"> 項目 </th>
                    <th class="col-md-4"> 値 </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="col-md-8">タンクの容量</th>
                    <td class="col-md-4"><%= @simsetting.fuel_capa %></td>
                </tr>
                <tr>
                    <th class="col-md-8">燃費</th>
                    <td class="col-md-4"><%= @simsetting.fuel_per1km %></td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="gasstand-wrapper">
        <h2>ガソリンスタンドの情報</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-8"> 項目 </th>
                    <th class="col-md-4"> 値 </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="col-md-8">最安値</th>
                    <td class="col-md-4"><%= @simsetting.gas_cheap %></td>
                </tr>
                <tr>
                    <th class="col-md-8">少し安め</th>
                    <td class="col-md-4"><%= @simsetting.gas_littlecheap %></td>
                </tr>
                <tr>
                    <th class="col-md-8">普通</th>
                    <td class="col-md-4"><%= @simsetting.gas_normal %></td>
                </tr>
                <tr>
                    <th class="col-md-8">少し高め</th>
                    <td class="col-md-4"><%= @simsetting.gas_littleexpensive %></td>
                </tr>
                <tr>
                    <th class="col-md-8">最高値</th>
                    <td class="col-md-4"><%= @simsetting.gas_expensive %></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class=btn-wrapper2>
        <%= button_to "シミュレーション開始", {controller: 'pages', action: 'simulate_result'}, {method: :get, class: "btn btn-outline-primary btn-block"} %>
    </div>
</div>