<div class="container">
    <div class="header-wrapper">
        <h1>ガソリン給油シミュレーション</h1>
    </div>
    <div class="bike-wrapper">
        <h2>車両の情報</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-5"> 項目 </th>
                    <th class="col-md-7"> 値 </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="col-md-5">タンクの容量</th>
                    <td class="col-md-7"><%= @simsetting.fuel_capa %></td>
                </tr>
                <tr>
                    <th class="col-md-5">燃費</th>
                    <td class="col-md-7"><%= @simsetting.fuel_per1km %></td>
                </tr>
                <tr>
                    <th class="col-md-5">メータがどれくらいで給油しますか？</th>
                    <td class="col-md-7"><%= @simsetting.fuel_threshold %></td>
                </tr>
            </tbody>
        </table>
    </div>


    <div class="gasstand-wrapper">
        <h2>乗り方の情報</h2>
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="col-md-5"> 項目 </th>
                    <th class="col-md-7"> 値 </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="col-md-5">平日の平均的な走行距離</th>
                    <td class="col-md-7"><%= @simsetting.dist_univ %> km</td>
                </tr>
                <tr>
                    <th class="col-md-5">休日の平均的な走行距離</th>
                    <td class="col-md-7"><%= @simsetting.dist_holiday %> km</td>
                </tr>
                <tr>
                    <th class="col-md-5">休日にお出かけする頻度</th>
                    <td class="col-md-7"><%= @simsetting.probability %></td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class=btn-wrapper2>
        <%= button_to "シミュレーション開始", {controller: 'pages', action: 'simulate_result'}, {method: :get, class: "btn btn-outline-primary btn-block"} %>
    </div>
</div>