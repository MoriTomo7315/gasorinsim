<div class="container">
    <div class="header-wrapper">
        <h1>ガソリン給油シミュレーション</h1>
    </div>

    <div class="bike-wrapper">
        <h2>バイクの情報</h2>
        <p>タンクの容量：<%= @bike.fuel_capa %>
        <p>燃費：<%= @bike.fuel_per1km %>
    </div>


    <div class="gasstand-wrapper">
        <h2>ガソリンスタンドの情報</h2>
        <p>最安値：<%= @gasstand.gas_cheap %>
        <p>少し安め：<%= @gasstand.gas_littlecheap %>
        <p>普通：<%= @gasstand.gas_normal %>
        <p>少し高め：<%= @gasstand.gas_littleexpensive %>
        <p>最高値：<%= @gasstand.gas_expensive %>
    </div>

    <%= form_tag simulate_result_path, method: "get" do %>
        <%= submit_tag("シミュレーション開始") %>
    <% end %>
</div>